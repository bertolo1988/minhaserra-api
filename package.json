{
  "name": "minhaterra-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "format": "npx prettier '*.{js,ts,json}' --write",
    "lint": "eslint . --ext .ts",
    "test:format": "npx prettier '*.{js,ts,json}' --check",
    "start": "npx ts-node src/run.ts",
    "test:unit": "cross-env NODE_ENV=test jest test/unit/*.ts",
    "test:intgration": "cross-env NODE_ENV=test jest test/integration/*.ts",
    "migrate:latest": "npx knex migrate:latest --knexfile knexfile.ts",
    "migrate:rollback": "npx knex migrate:rollback --all --knexfile knexfile.ts",
    "migrate:up": "npx knex migrate:up --knexfile knexfile.ts",
    "migrate:down": "npx knex migrate:down --knexfile knexfile.ts",
    "migrate:list": "npx knex migrate:list --knexfile knexfile.ts",
    "migrate:new": "npx knex migrate:make my-new-migration -x ts --knexfile knexfile.ts"
  },
  "keywords": [],
  "author": "bertolo1988 <tiagobertolo@gmail.com> (https://github.com/bertolo1988)",
  "dependencies": {
    "@koa/bodyparser": "^5.0.0",
    "ajv": "^8.12.0",
    "ajv-errors": "^3.0.0",
    "dotenv": "^16.3.1",
    "knex": "^3.1.0",
    "koa": "^2.14.2",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-router": "^12.0.1",
    "lodash": "^4.17.21",
    "pg": "^8.11.3",
    "uuidv4": "^6.2.13"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/knex": "^0.16.1",
    "@types/koa": "^2.13.12",
    "@types/koa__router": "^12.0.4",
    "@types/koa-json": "^2.0.23",
    "@types/koa-logger": "^3.1.5",
    "@types/koa-router": "^7.4.8",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
